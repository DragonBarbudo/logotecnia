    section.whatdo.lax(data-lax-translate-x="800 4000, 1200 0")
      .title: h2(data-lax-preset="zoomIn").lax ¿Qué hace Logotecnia?

      .description: p(data-lax-preset="blurIn").lax CREA Y DISEÑA

      .description_detail
        .card(data-lax-scale="1200 0, 1300 1").lax
          include app/img/ico-naming.svg
          .title Naming
          .subtitle Asignación de nombre a la empresa o negocio
        .card(data-lax-scale="1200 0, 1300 1 | offset=-100").lax
          include app/img/ico-logotipos.svg
          .title Logotipos
        .card(data-lax-scale="1200 0, 1300 1 | offset=-120").lax
          include app/img/ico-tarjetas.svg
          .title Tarjetas
          .subtitle de presentación
        .card(data-lax-scale="1200 0, 1300 1 | offset=-140").lax
          include app/img/ico-hojas.svg
          .title Hojas
          .subtitle membretadas
        .card(data-lax-scale="1200 0, 1300 1 | offset=-160").lax
          include app/img/ico-recetas.svg
          .title Recetas
        .card(data-lax-scale="1200 0, 1300 1 | offset=-180").lax
          include app/img/ico-material.svg
          .title Material Publicitario
          .subtitle Folletos, banners, volantes, posters, etc.
