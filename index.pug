    section.callus
      .title: h2(data-lax-preset="zoomIn").lax ¿Cómo nos contactas?

      .contactus
        div.where(data-lax-preset="fadeIn").lax
          .title Llámanos
          .subtitle 55 4099 4071 #[i.fa.fa-whatsapp]
        div.where(data-lax-preset="fadeIn").lax
          .title Escríbenos
          .subtitle contacto@logotecnia.com.mx
      
      form(data-lax-preset="blurIn").lax
        input(type="hidden" name="_to" value="contacto@logotecnia.com.mx")
        input(type="hidden" name="_subject" value="Mensaje de contacto de logotecnia.com.mx")
        .form
          label
            span Nombre
            input(type="text" placeholder="Nombre" name="Nombre" required)
          label
            span Teléfono
            input(type="text" placeholder="Teléfono" name="telefono")
          label
            span Correo
            input(type="email" placeholder="Correo" name="_from" required)
        .form
          label
            span Mensaje
            textarea(placeholder="Mensaje" name="mensaje")
        button(type="submit") Enviar
      .notification.is-dark Tu mensaje ha sido enviado. Nos pondremos en contacto.
    

    section.wherewe
      .triangles
        - for(v=0;v<30;v++)
          - var posyRandom = (Math.random()*600)+200 
          - var posy = "500 -"+posyRandom+", 1400 0"
          - var opaRandom = (Math.random()*20)+2
          - var opaRandom2 = (Math.random()*10)+1
          .triangle(data-lax-opacity="0 .1, 400 1"  data-lax-scale="100 "+opaRandom+", 1000 .1" data-lax-translate-y=posy data-lax-anchor="self").lax
          .triangle.trb(data-lax-opacity="0 .1, 400 1"  data-lax-scale="100 "+opaRandom2+", 1000 .1" data-lax-translate-y=posy data-lax-anchor="self").lax
